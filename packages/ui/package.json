{
  "name": "@loki-sample/ui",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "./src/index.ts",
  "types": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./styles.css": "./src/styles.css"
  },
  "scripts": {
    "test": "bun test src/",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "typecheck": "tsc --noEmit",
    "vrt": "storybook build && bunx playwright test",
    "vrt:update-snapshots": "storybook build && node -e \"require('fs').rmSync('vrt/screenshots/'+process.platform,{recursive:true,force:true})\" && bunx playwright test --update-snapshots"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "tailwind-merge": "^3.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@storybook/react": "^10.2.10",
    "@storybook/react-vite": "^10.2.10",
    "@tailwindcss/vite": "^4.2.0",
    "@types/react": "^19.2.14",
    "@types/react-dom": "^19.2.3",
    "storybook": "^10.2.10",
    "tailwindcss": "^4.2.0",
    "typescript": "^5.9.3"
  }
}
